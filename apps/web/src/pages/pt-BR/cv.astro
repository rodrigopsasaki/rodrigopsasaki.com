---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n';

const lang = 'pt-BR';
const t = useTranslations(lang);

// This would typically come from a data file or CMS
const personalInfo = {
  name: "Rodrigo Sasaki",
  title: "Engenheiro de Software Sênior",
  email: "rodrigopsasaki@gmail.com",
  linkedin: "https://linkedin.com/in/rodrigopsasaki",
  github: "https://github.com/rodrigopsasaki",
  location: "São Paulo, SP - Brasil",
};

const experience = [
  {
    company: "Empresa Atual",
    position: "Engenheiro de Software Sênior",
    startDate: "2023-01-01",
    endDate: null,
    description: "Desenvolvendo sistemas escaláveis com TypeScript e Node.js",
    technologies: ["TypeScript", "Node.js", "React", "PostgreSQL"],
  },
];

const education = [
  {
    institution: "Universidade",
    degree: "Bacharelado em Ciência da Computação",
    startDate: "2015-03-01",
    endDate: "2019-12-01",
  },
];

const skills = {
  "Linguagens": ["TypeScript", "JavaScript", "Python", "Go"],
  "Frameworks": ["React", "Node.js", "Express", "NestJS"],
  "Bancos de Dados": ["PostgreSQL", "MongoDB", "Redis"],
  "Ferramentas": ["Docker", "Git", "AWS", "Terraform"],
  "Nuvem": ["AWS", "Google Cloud", "Azure"],
};
---

<BaseLayout title={t.cv.title}>
  <div class="min-h-screen bg-gray-50 dark:bg-monokai-bg">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4">
          <span class="bg-gradient-to-r from-primary-600 to-accent-600 dark:from-primary-400 dark:to-accent-400 bg-clip-text text-transparent">
            {t.cv.title}
          </span>
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-8">
          {t.cv.subtitle}
        </p>
      </div>

      <!-- Personal Info -->
      <div class="bg-gradient-to-br from-primary-50 to-accent-50 dark:from-primary-950/20 dark:to-accent-950/20 rounded-2xl p-8 border border-primary-200/50 dark:border-primary-800/50 mb-12">
        <div class="text-center">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-2">
            {personalInfo.name}
          </h2>
          <p class="text-lg text-primary-600 dark:text-primary-400 mb-4">
            {personalInfo.title}
          </p>
          <div class="contact-links flex flex-wrap justify-center gap-6 text-sm">
            <a href={personalInfo.linkedin} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-white/70 dark:bg-monokai-bg/70 border border-gray-200/50 dark:border-monokai-border/50 hover:bg-blue-50 dark:hover:bg-blue-900/20 hover:shadow-md transition-all duration-200 text-gray-700 dark:text-monokai-muted hover:text-blue-600 dark:hover:text-blue-400">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd" />
              </svg>
              LinkedIn
            </a>
            <a href={personalInfo.github} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-white/70 dark:bg-monokai-bg/70 border border-gray-200/50 dark:border-monokai-border/50 hover:bg-gray-50 dark:hover:bg-gray-800/50 hover:shadow-md transition-all duration-200 text-gray-700 dark:text-monokai-muted hover:text-gray-900 dark:hover:text-monokai-text">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
              </svg>
              GitHub
            </a>
          </div>
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Experience -->
        <section class="space-y-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 flex items-center gap-3">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-500 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"></path>
              </svg>
            </div>
            {t.cv.experience.title}
          </h3>
          
          <div class="relative">
            <div class="timeline-line absolute left-4 top-0 bottom-0 w-px bg-gradient-to-b from-gray-200 to-transparent dark:from-monokai-border dark:to-transparent"></div>
            <div class="experience-item relative bg-white dark:bg-monokai-surface border border-gray-200 dark:border-monokai-border rounded-2xl p-6 ml-8 shadow-sm hover:shadow-md transition-shadow duration-200">
              <div class="experience-number absolute -left-12 top-6 w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-500 text-white rounded-full flex items-center justify-center text-sm font-bold shadow-lg">
                1
              </div>
              <div class="mb-4">
                <h4 class="text-lg font-bold text-gray-900 dark:text-monokai-text mb-1">
                  {experience[0].position}
                </h4>
                <div class="text-primary-600 dark:text-monokai-yellow font-semibold mb-2">
                  {experience[0].company}
                </div>
                <div class="text-sm text-gray-500 dark:text-monokai-muted mb-3">
                  {new Date(experience[0].startDate).toLocaleDateString('pt-BR', { month: 'long', year: 'numeric' })} - {experience[0].endDate ? new Date(experience[0].endDate).toLocaleDateString('pt-BR', { month: 'long', year: 'numeric' }) : t.cv.experience.current}
                </div>
                <p class="text-gray-700 dark:text-monokai-muted leading-relaxed mb-4">
                  {experience[0].description}
                </p>
                <div class="flex flex-wrap gap-2">
                  {experience[0].technologies.map((tech) => (
                    <span class="text-xs px-2 py-1 bg-primary-100 dark:bg-monokai-surface text-primary-700 dark:text-monokai-green rounded-full font-medium">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Skills -->
        <section class="space-y-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 flex items-center gap-3">
            <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-teal-500 rounded-lg flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            {t.cv.skills.title}
          </h3>
          
          <div class="grid gap-6">
            {Object.entries(skills).map(([category, items], index) => {
              const colors = [
                'from-blue-50 to-indigo-50 dark:from-blue-950/20 dark:to-indigo-950/20 border-blue-200/50 dark:border-blue-800/50',
                'from-green-50 to-emerald-50 dark:from-green-950/20 dark:to-emerald-950/20 border-green-200/50 dark:border-green-800/50',
                'from-purple-50 to-pink-50 dark:from-purple-950/20 dark:to-pink-950/20 border-purple-200/50 dark:border-purple-800/50',
                'from-orange-50 to-red-50 dark:from-orange-950/20 dark:to-red-950/20 border-orange-200/50 dark:border-orange-800/50',
                'from-teal-50 to-cyan-50 dark:from-teal-950/20 dark:to-cyan-950/20 border-teal-200/50 dark:border-teal-800/50',
              ];
              const colorClass = colors[index % colors.length];
              
              return (
                <div class={`skill-category bg-gradient-to-br ${colorClass} border rounded-2xl p-6 hover:shadow-lg transition-all duration-200`}>
                  <h3 class="text-lg font-bold mb-4 text-gray-900 dark:text-monokai-text">{category}</h3>
                  <div class="space-y-3">
                    <div class="flex flex-wrap gap-2">
                      {items.map((skill) => (
                        <span class="text-sm px-3 py-1 bg-white/70 dark:bg-monokai-bg/70 text-gray-700 dark:text-monokai-text rounded-full font-medium border border-gray-200/50 dark:border-monokai-border/50">
                          {skill}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        </section>
      </div>

      <!-- Education -->
      <section class="mt-12 space-y-8">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 flex items-center gap-3">
          <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
            </svg>
          </div>
          {t.cv.education.title}
        </h3>
        
        <div class="space-y-6">
          <div class="education-item relative bg-white dark:bg-monokai-surface border border-gray-200 dark:border-monokai-border rounded-2xl p-6 shadow-sm hover:shadow-md transition-all duration-200">
            <div class="education-number absolute -left-3 top-6 w-6 h-6 bg-gradient-to-br from-indigo-500 to-purple-500 text-white rounded-full flex items-center justify-center text-xs font-bold shadow-lg">
              1
            </div>
            <div>
              <h4 class="text-lg font-bold text-gray-900 dark:text-monokai-text mb-1">
                {education[0].degree}
              </h4>
              <div class="text-primary-600 dark:text-monokai-yellow font-semibold mb-2">
                {education[0].institution}
              </div>
              <div class="text-sm text-gray-500 dark:text-monokai-muted">
                {new Date(education[0].startDate).toLocaleDateString('pt-BR', { month: 'long', year: 'numeric' })} - {new Date(education[0].endDate).toLocaleDateString('pt-BR', { month: 'long', year: 'numeric' })}
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Languages -->
      <section class="mt-12 space-y-8">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 flex items-center gap-3">
          <div class="w-8 h-8 bg-gradient-to-br from-rose-500 to-pink-500 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
            </svg>
          </div>
          {t.cv.languages.title}
        </h3>
        
        <div class="grid md:grid-cols-2 gap-6">
          <div class="bg-white dark:bg-monokai-surface border border-gray-200 dark:border-monokai-border rounded-2xl p-6 shadow-sm">
            <h4 class="text-lg font-semibold text-gray-900 dark:text-monokai-text mb-2">
              {t.cv.languages.portuguese}
            </h4>
            <p class="text-primary-600 dark:text-monokai-yellow font-medium">
              {t.cv.languages.native}
            </p>
          </div>
          
          <div class="bg-white dark:bg-monokai-surface border border-gray-200 dark:border-monokai-border rounded-2xl p-6 shadow-sm">
            <h4 class="text-lg font-semibold text-gray-900 dark:text-monokai-text mb-2">
              {t.cv.languages.english}
            </h4>
            <p class="text-primary-600 dark:text-monokai-yellow font-medium">
              {t.cv.languages.fluent}
            </p>
          </div>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>