---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="text-sm text-gray-500 dark:text-monokai-muted mb-8" aria-label="Breadcrumb">
  <ol class="list-none p-0 inline-flex flex-wrap items-center">
    {items.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && (
          <span class="mx-2 text-gray-400 dark:text-monokai-muted">/</span>
        )}
        {item.href ? (
          <a 
            href={item.href} 
            class="hover:text-gray-700 dark:hover:text-monokai-text transition-colors"
          >
            {item.label}
          </a>
        ) : (
          <span class="text-gray-700 dark:text-monokai-text font-medium">
            {item.label}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>