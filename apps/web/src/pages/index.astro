---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title={t.nav.home}>
  <!-- Minimal Hero Section -->
  <section class="min-h-[calc(100vh-4rem)] flex items-center justify-center relative bg-gray-50 dark:bg-monokai-bg">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="space-y-12">
        <!-- Name -->
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight text-gray-800 dark:text-monokai-text">
          Rodrigo Sasaki
        </h1>
        
        <!-- Simple navigation links -->
        <nav class="flex flex-col sm:flex-row gap-6 sm:gap-12 justify-center items-center text-lg">
          <a href={getLocalizedPath('/projects/', lang)} 
             class="text-gray-600 dark:text-monokai-muted hover:text-gray-900 dark:hover:text-monokai-text transition-colors duration-200">
            {t.nav.projects}
          </a>
          
          <a href={getLocalizedPath('/blog/', lang)} 
             class="text-gray-600 dark:text-monokai-muted hover:text-gray-900 dark:hover:text-monokai-text transition-colors duration-200">
            {t.nav.blog}
          </a>
          
          <a href={getLocalizedPath('/cv/', lang)} 
             class="text-gray-600 dark:text-monokai-muted hover:text-gray-900 dark:hover:text-monokai-text transition-colors duration-200">
            {t.nav.cv}
          </a>
        </nav>
      </div>
    </div>
  </section>
</BaseLayout>
