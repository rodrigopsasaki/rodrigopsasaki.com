---
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';
import LanguageToggle from '../components/LanguageToggle.astro';
import SEO from '../components/SEO.astro';
import { getLangFromUrl, useTranslations, getHtmlLang, getLocalizedPath } from '../i18n';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    tags?: string[];
  };
  noindex?: boolean;
  nofollow?: boolean;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const htmlLang = getHtmlLang(lang);

const { 
  title, 
  description = t.meta.description,
  image,
  article,
  noindex,
  nofollow 
} = Astro.props;
---

<!DOCTYPE html>
<html lang={htmlLang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="Rodrigo Sasaki - Blog RSS Feed" href="/rss.xml" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <SEO
      title={title}
      description={description}
      image={image}
      article={article}
      noindex={noindex}
      nofollow={nofollow}
    />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- Theme initialization script (runs before page renders) -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'system';
        const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const isDark = theme === 'dark' || (theme === 'system' && systemDark);
        
        if (isDark) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
    
    <!-- Copy code functionality -->
    <script>
      import { initCopyCodeButtons } from '../scripts/copy-code';
      initCopyCodeButtons();
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-monokai-bg text-gray-800 dark:text-monokai-text transition-colors duration-300">
    <nav class="sticky top-0 z-50 bg-gray-50 dark:bg-monokai-bg border-b border-gray-200 dark:border-monokai-border">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <a href={getLocalizedPath('/', lang)} class="font-semibold text-lg text-gray-800 dark:text-monokai-text hover:text-gray-600 dark:hover:text-monokai-muted transition-colors duration-200">
              RS
            </a>
          </div>
          
          <div class="flex items-center space-x-6">
            <div class="hidden md:flex items-center space-x-6">
              <a href={getLocalizedPath('/projects/', lang)} class="text-gray-600 dark:text-monokai-muted hover:text-gray-900 dark:hover:text-monokai-text transition-colors duration-200">
                {t.nav.projects}
              </a>
              <a href={getLocalizedPath('/blog/', lang)} class="text-gray-600 dark:text-monokai-muted hover:text-gray-900 dark:hover:text-monokai-text transition-colors duration-200">
                {t.nav.blog}
              </a>
              <a href={getLocalizedPath('/cv/', lang)} class="text-gray-600 dark:text-monokai-muted hover:text-gray-900 dark:hover:text-monokai-text transition-colors duration-200">
                {t.nav.cv}
              </a>
            </div>
            <LanguageToggle />
            <ThemeToggle />
          </div>
        </div>
      </div>
    </nav>

    <main class="relative">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-200 dark:border-monokai-border">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
          <div class="text-gray-500 dark:text-monokai-muted text-sm">
            Â© {new Date().getFullYear()}
          </div>
          <div class="flex items-center space-x-6 text-sm">
            <a href="https://github.com/rodrigopsasaki" class="text-gray-500 dark:text-monokai-muted hover:text-gray-700 dark:hover:text-monokai-text transition-colors duration-200">
              GitHub
            </a>
            <a href="https://linkedin.com/in/rodrigopsasaki" class="text-gray-500 dark:text-monokai-muted hover:text-gray-700 dark:hover:text-monokai-text transition-colors duration-200">
              LinkedIn
            </a>
            <a href="/rss.xml" class="text-gray-500 dark:text-monokai-muted hover:text-gray-700 dark:hover:text-monokai-text transition-colors duration-200" type="application/rss+xml">
              RSS
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>